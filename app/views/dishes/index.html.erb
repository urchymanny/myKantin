<p id="notice"><%= notice %></p>

<h1>Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.title %></td>
        <td><%= dish.description %></td>
        <td><%= dish.price %></td>
        <td><%= dish.image %></td>
        <td><%= link_to 'Show', restaurant_dish_path(params[:restaurant_id], dish) %></td>
        <td><%= link_to 'Edit', edit_restaurant_dish_path(params[:restaurant_id], dish) %></td>
        <td><%= link_to 'Destroy', restaurant_dish_path(params[:restaurant_id], dish), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


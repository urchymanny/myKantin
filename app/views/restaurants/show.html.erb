<!-- Content ================================================== -->
<div class="container margin_60_35">
  <div class="row">

    <div class="col-md-3">
      <p><%= link_to "Back", request.referer, class: "btn_side" %></p>
      <div class="box_style_1">
        <ul id="cat_nav">
          <% @restaurant.cuisines.each do |cuisine| %>
            <li>
              <a href="#<%= cuisine.title.split.join("-") %>" class="active"><%= cuisine.title %> <span>(<%= cuisine.dishes.count %>)</span></a>
            </li>
          <% end %>
        </ul>
      </div><!-- End box_style_1 -->

      <div class="box_style_2 hidden-xs" id="help">
        <i class="icon_lifesaver"></i>
        <h4>Need <span>Help?</span></h4>
        <a href="tel://004542344599" class="phone">+2348138236694</a>
        <small>Monday to Friday 9.00am - 7.30pm</small>
      </div>
    </div><!-- End col-md-3 -->

    <div class="col-md-6">
      <div class="box_style_2" id="main_menu">
        <h2 class="inner">Menu</h2>
        <% @restaurant.cuisines.each do |cuisine| %>
        <h3 class="nomargin_top" id="<%= cuisine.title.split.join("-") %>"><%= cuisine.title %></h3>
        <p>
          <%= cuisine.description %>
        </p>
        <table class="table table-striped cart-list">
          <thead>
            <tr>
              <th>
               Item
             </th>
             <th>
               Price
             </th>
             <th>
               Order
             </th>
           </tr>
         </thead>
         <tbody>
          <% cuisine.dishes.each do |dish| %>
          <tr>
            <td>
              <figure class="thumb_menu_list"><%= image_tag dish.image_url, alt: dish.title %></figure>
              <h5>1. <%= dish.title %></h5>
              <p>
                <%= dish.description %>
              </p>
            </td>
            <td>
              <strong>&#8358; <%= number_to_currency(dish.price, unit: "", precision: 0) %></strong>
            </td>
            <td class="options">
              <div class="dropdown dropdown-options">
                <a href="#0"><i class="icon_plus_alt2"></i></a>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <hr>
      <% end %>

      <%= link_to "Add Dish", new_restaurant_dish_path(@restaurant) %>
</div><!-- End box_style_1 -->
</div><!-- End col-md-6 -->

